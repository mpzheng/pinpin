<view class="container">
  <image class='background' src="../src/background-image.png" mode="aspectFill"></image>
  <view class='selection'>
    <image src='../src/大遮罩.png' class='test-image1'></image>
    <image src='../src/路线.png' class='test-image2'></image>
    <view class='test-image2'>
      <text class="test-text1">{{beginName}}</text>
      <text class="test-text2">{{aimName}}</text>
    </view> 
  </view>

  <view class='selection'>

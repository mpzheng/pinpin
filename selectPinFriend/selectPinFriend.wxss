page{
  width: 100%;
  height: 100%;
}

.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  z-index: -1;
}

.selection{
  display: flex;
  justify-content: center;
  align-items: center;
}

.space1{
  height: 150rpx;
  width: 100%;
  display: flex;
  background-color: rgb(255, 255, 255,0.8);
  align-items: center;
  border-radius: 15rpx;
  font-size: 50rpx;
  justify-content: center;
}

.space1 image{
  width: 60rpx;
  height: 60rpx;
  padding-right:50rpx;
}

.content{
  display: flex;
  height: 1000rpx;
  margin-top: 50rpx;
  padding-top: 50rpx;
  width: 700rpx;
  background-color: rgba(255, 255, 255, 0.7);
  align-items: center;
  flex-direction: column;
  border-radius: 20rpx;
}

.content-item{
  display: flex;
  margin-top: 75rpx;
  width: 550rpx;
  height: 125rpx;
  align-items: center;
  justify-content: space-between;
  padding-left: 20rpx;
  padding-right: 20rpx;
  background-color: rgba(185, 198, 253, 0.4);
}

.left-item{
  display: flex;
  align-items: center;
  color: rgb(0, 0, 0);
}
.left-item image{
  width: 50rpx;
  height: 50rpx;
}

.correct{
  margin-top: 100rpx;
  height: 100rpx;
  width: 250rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(123, 147, 253, 0.8);
  border-radius: 25rpx;
  color: white;
  font-size: 50rpx;
}